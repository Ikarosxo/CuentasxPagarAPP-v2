                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-success">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
