<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CedulaRNC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
